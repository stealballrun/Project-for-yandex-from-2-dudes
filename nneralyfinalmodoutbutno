import sys
 from PyQt5.QtCore import Qt
 from PyQt5.QtWidgets import QWidget, QApplication, QPushButton
 import PyQt5.QtGui as QtGui
 i = 0
 class Example(QWidget):
     def __init__(self):
         super().__init__()
         self.initUI()
 
      def initUI(self):
         self.setGeometry(400, 400, 400, 400)
         self.setWindowTitle('Вход для настоящих мужзчин и леди')
 
          self.button_1 = QPushButton(self)
         self.button_1.move(60, 350)
         self.button_1.setText("Ваши веса")
         self.button_1.clicked.connect(self.run)
 
          self.button_2 = QPushButton(self)
         self.button_2.move(150, 350)
         self.button_2.setText("Авторские веса")
         self.button_2.clicked.connect(self.run)
 
          self.button_3 = QPushButton(self)
         self.button_3.move(275, 350)
         self.button_3.setText("Обучить")
         self.button_3.clicked.connect(self.run)
         
          self.btn = QPushButton('Начать обработку', self)
         self.btn.resize(self.btn.sizeHint())
         self.btn.move(125, 200)
         self.btn.clicked.connect(self.getfileforrealmen)
          
           
          self.name_label = QLabel(self)
         self.name_label.setText("Введите название файла: ")
         self.name_label.move(10, 90)
          
         self.name_input = QLineEdit(self)
         self.name_input.move(200, 80)
          
               def getfileforrealmen(self):
                  name = self.name_input.text()
                  filethatweneed = open('text.txt', 'w')
                  filethatweneed.write(name)
                  filethatwneed.close()               
 
          self.show()
 
      def run(self):
         return self.sender().text()
 
  
  if __name__ == '__main__' and i == 0:
     app = QApplication(sys.argv)
     ex = Example()
     ex.show()
     sys.exit(app.exec())
     i = 1
